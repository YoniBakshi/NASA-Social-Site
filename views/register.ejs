</head>
<body>
<main>
    <div class="container">

        <!-- Top Title Registration Part 1 Page -->
        <div class="container-fluid px-5">
            <div class="row g-0" id="header-container">
                <div class="p-2 mb-3 bg-transparent rounded-5 px-5">

                    <!--<img class="image-fluid" src="../public/images/NASA-Logo.png" height="200px" width="200px"
                         alt="NASA Logo">-->
                    <p>
                    <h2 class="text-center display-5 fs-2"> Please Register <br> Register </h2></p>

                </div>
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <form class="form-floating" action="/register/data" method="POST">

                    <!-- Email Registration input -->
                    <div class="form-floating mb-4">
                        <input type="email" id="emailRegister" class="form-control" placeholder="Email address" name="emailRegister">
                        <label for="floatingInputValue">Email address</label>
                    </div>

                    <!-- First Name Registration input -->
                    <div class="form-floating mb-4">
                        <input type="text" id="firstName" class="form-control" placeholder="First Name" name="firstName">
                        <label for="floatingInputValue">First Name</label>
                    </div>

                    <!-- Last Name Registration input -->
                    <div class="form-floating mb-4">
                        <input type="text" id="lastName" class="form-control" placeholder="Last Name" name="lastName">
                        <label for="floatingInputValue">Last Name</label>
                    </div>

                    <div class="row d-flex justify-content-center">
                        <!-- Submit Part 1 Register button -->
                            <button type="submit" class="btn btn-primary btn-block d-grid gap-2 mx-auto" >Next</button>
                    </div>

                        <!-- Login button -->
                        <div class="text-center">
                            <p>Already registered? go to <a href="/">login</a> page</p>
                        </div>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('includes/end.ejs') %>